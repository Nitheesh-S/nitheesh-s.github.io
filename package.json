{
  "name": "nitheesh-s.github.io",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run watch:scss",
    "minify:css": "ls css/*.min.css -1 | xargs -I{} cleancss -o {} {}",
    "rename:css": "ls css/*[^min].css -1 | sed -e 's/\\.css$//' | xargs -I{} mv {}.css {}.min.css",
    "prettier": "npm run prettier:js && npm run prettier:scss",
		"prettier:js": "prettier --config .prettierrc --write 'js/**/*[^min].js'",
		"prettier:scss": "prettier --config .prettierrc --write './**/*.scss'",
    "scss": "node-sass --output-style compressed -o css/ scss/ && npm run rename:css",
    "watch:scss": "onchange \"scss/**/*.scss\" -- npm run scss",
    "build": "npm run prettier && npm run scss && npm run minify:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nitheesh-S/nitheesh-s.github.io.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Nitheesh-S/nitheesh-s.github.io/issues"
  },
  "homepage": "https://github.com/Nitheesh-S/nitheesh-s.github.io#readme",
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "prettier": "^2.1.1"
  }
}
